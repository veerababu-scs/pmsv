<!DOCTYPE html>
<html>
<head>
<title>Edit Projects</title>
</head>
<body>

<!-- Clarity Section -->
<div class="container" style="background-color:#f1f1f1" >
  <div class="row-30">
    <div class="column-1">
      <p class="large-font" style="color:darkblue;"><b>Projects</b></p>

      <div align="right">
      <%= form_for :projects do |f| %>Filter Projects: 
      <%= f.select :project_type, Project.project_types.keys,include_blank:true %>
      <%= f.submit "Filter Results" %>
      <% end %>
      </div>
      <%= link_to "Create Project",new_project_path %>
      <table cellpadding="20">
      <tr>
      <th>User Name</th>
      <th>Project Name</th>
      <th>Project Type</th>
      <th>Edit Project</th>
      </tr>
      <% @project.each do |data| %>
      <tr>
      <td><%= current_user.name %></td>
      <td><%= data.name %></td>
      <td><%= data.project_type %></td>
      <td><%= link_to "Edit",edit_project_path(data.id) %></td>
      </tr>
      <% end %>                  
      </table>
    </div>
  </div>
</div>

</body>
</html>